<div class="products-page py-4">
  {{!-- Page Header --}}
  <div class="page-header mb-4">
    <div class="d-flex flex-column flex-md-row align-items-start align-items-md-center justify-content-between gap-3">
      <div>
        <h1 class="display-5 fw-bold text-dark mb-2">
          <i class="bi bi-grid-3x3-gap me-2"></i>All Products
        </h1>
        <p class="text-muted mb-0">Browse our collection of premium products</p>
      </div>
      <div class="d-flex align-items-center gap-2">
        <span class="badge bg-dark rounded-pill px-3 py-2">
          <i class="bi bi-box-seam me-1"></i>{{products.length}} Products
        </span>
        <a class="btn btn-dark" href="/admin/products/create">+ New</a>
      </div>
    </div>
  </div>

  {{!-- Advanced Filter Card --}}
  <div class="card border-0 shadow-lg mb-4">
    <div class="card-body p-4">
      <div class="d-flex align-items-center mb-3">
        <i class="bi bi-funnel-fill text-danger fs-4 me-2"></i>
        <h4 class="fw-bold mb-0">Advanced Filters</h4>
      </div>
      
      <form method="get" action="/products" class="row g-3">
        {{!-- Search Row --}}
        <div class="col-12">
          <div class="input-group">
            <span class="input-group-text bg-dark text-white">
              <i class="bi bi-search"></i>
            </span>
            <input 
              type="text" 
              class="form-control form-control-lg border-dark" 
              name="q" 
              value="{{q}}" 
              placeholder="Search products by name, description..."
            >
          </div>
        </div>

        {{!-- Filters Row --}}
        <div class="col-md-4">
          <label class="form-label fw-semibold">
            <i class="bi bi-tag me-1"></i>Category
          </label>
          <select class="form-select form-select-lg border-dark" name="category">
            <option value="">All Categories</option>
            {{#each categories}}
              <option value="{{this}}" {{#ifEquals ../category this}}selected{{/ifEquals}}>
                {{this}}
              </option>
            {{/each}}
          </select>
        </div>

        <div class="col-md-3">
          <label class="form-label fw-semibold">
            <i class="bi bi-currency-dollar me-1"></i>Min Price
          </label>
          <div class="input-group">
            <span class="input-group-text bg-light border-dark">$</span>
            <input 
              type="number" 
              class="form-control form-control-lg border-dark" 
              name="min" 
              value="{{min}}" 
              min="0" 
              placeholder="0"
            >
          </div>
        </div>

        <div class="col-md-3">
          <label class="form-label fw-semibold">
            <i class="bi bi-currency-dollar me-1"></i>Max Price
          </label>
          <div class="input-group">
            <span class="input-group-text bg-light border-dark">$</span>
            <input 
              type="number" 
              class="form-control form-control-lg border-dark" 
              name="max" 
              value="{{max}}" 
              min="0" 
              placeholder="9999"
            >
          </div>
        </div>

        <div class="col-md-2 d-grid">
          <button type="submit" class="btn btn-dark btn-lg h-100">
            <i class="bi bi-filter me-1"></i>Filter
          </button>
        </div>

        {{!-- Clear Filters --}}
        {{#if (or q min max category)}}
          <div class="col-12">
            <a href="/products" class="btn btn-outline-dark btn-sm">
              <i class="bi bi-x-circle me-1"></i>Clear All Filters
            </a>
          </div>
        {{/if}}
      </form>
    </div>
  </div>

  {{!-- Products Grid --}}
  {{#if products.length}}
    <div class="row g-4">
      {{#each products}}
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
          <div class="product-card card border-0 shadow-sm h-100 transition-all">
            {{!-- Product Image with Badges --}}
            <div class="product-image position-relative overflow-hidden rounded-top">
              {{#if image}}
                <img 
                  src="{{image}}" 
                  class="img-fluid w-100" 
                  style="height: 220px; object-fit: cover;" 
                  alt="{{name}}"
                  loading="lazy"
                >
              {{else}}
                <div class="bg-light d-flex align-items-center justify-content-center" 
                     style="height: 220px;">
                  <div class="text-center">
                    <i class="bi bi-image text-muted fs-1"></i>
                    <p class="text-muted small mt-2">No Image</p>
                  </div>
                </div>
              {{/if}}
              
              {{!-- Badges --}}
              <div class="position-absolute top-0 start-0 d-flex flex-column gap-1 p-2">
                {{#if stock}}
                  <span class="badge bg-success">
                    <i class="bi bi-check-circle me-1"></i>In Stock
                  </span>
                {{else}}
                  <span class="badge bg-danger">
                    <i class="bi bi-x-circle me-1"></i>Out of Stock
                  </span>
                {{/if}}
                <span class="badge bg-dark">{{category}}</span>
              </div>
              
              {{!-- Quick Actions --}}
              <div class="product-actions position-absolute top-0 end-0 p-2 opacity-0">
                <button class="btn btn-light btn-sm rounded-circle shadow-sm mb-2" title="Add to Wishlist">
                  <i class="bi bi-heart"></i>
                </button>
                <button class="btn btn-light btn-sm rounded-circle shadow-sm" title="Quick View">
                  <i class="bi bi-eye"></i>
                </button>
              </div>
              
              {{!-- Stock Indicator --}}
              <div class="stock-indicator position-absolute bottom-0 w-100 px-3 py-2" style="background: rgba(0,0,0,0.7);">
                <div class="d-flex justify-content-between align-items-center">
                  <span class="text-white small">Available:</span>
                  <span class="text-white fw-semibold">{{stock}} units</span>
                </div>
              </div>
            </div>

            {{!-- Product Info --}}
            <div class="card-body p-3">
              <h6 class="card-title fw-bold text-dark mb-2 text-truncate" title="{{name}}">
                {{name}}
              </h6>
              
              <p class="card-text text-muted small mb-3" 
                 style="display: -webkit-box;
                        -webkit-line-clamp: 2;
                        -webkit-box-orient: vertical;
                        overflow: hidden;
                        min-height: 40px;">
                {{description}}
              </p>
              
              {{!-- Price and Rating --}}
              <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                  <span class="fs-4 fw-bold text-dark">${{price}}</span>
                  {{#if originalPrice}}
                    <span class="text-muted text-decoration-line-through ms-2">${{originalPrice}}</span>
                  {{/if}}
                </div>
                <div class="text-warning small">
                  <i class="bi bi-star-fill"></i>
                  <i class="bi bi-star-fill"></i>
                  <i class="bi bi-star-fill"></i>
                  <i class="bi bi-star-half"></i>
                  <i class="bi bi-star"></i>
                </div>
              </div>
              
              {{!-- Action Buttons --}}
              <div class="d-flex gap-2">
                <a href="/products/{{slug}}" class="btn btn-dark flex-grow-1">
                  <i class="bi bi-eye me-1"></i>View Details
                </a>
                <button class="btn btn-outline-dark" title="Add to Cart">
                  <i class="bi bi-cart-plus"></i>
                </button>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>

    {{!-- Pagination --}}
    <nav class="mt-5 pt-4 border-top">
      <div class="d-flex flex-column flex-md-row justify-content-between align-items-center gap-3">
        <div class="text-muted">
          Showing {{products.length}} of {{totalItems}} products
        </div>
        
        <ul class="pagination justify-content-center mb-0">
          {{#if hasPrev}}
            <li class="page-item">
              <a class="page-link btn-outline-dark d-flex align-items-center" 
                 href="/products?page={{prevPage}}&q={{q}}&min={{min}}&max={{max}}&category={{category}}">
                <i class="bi bi-chevron-left me-2"></i>Previous
              </a>
            </li>
          {{else}}
            <li class="page-item disabled">
              <span class="page-link">
                <i class="bi bi-chevron-left me-2"></i>Previous
              </span>
            </li>
          {{/if}}

          {{!-- Page Numbers --}}
          {{#each pageNumbers}}
            <li class="page-item {{#ifEquals this ../page}}active{{/ifEquals}}">
              <a class="page-link" 
                 href="/products?page={{this}}&q={{../q}}&min={{../min}}&max={{../max}}&category={{../category}}">
                {{this}}
              </a>
            </li>
          {{/each}}

          <li class="page-item disabled d-none d-md-block">
            <span class="page-link text-dark fw-semibold">
              Page {{page}} of {{totalPages}}
            </span>
          </li>

          {{#if hasNext}}
            <li class="page-item">
              <a class="page-link btn-outline-dark d-flex align-items-center" 
                 href="/products?page={{nextPage}}&q={{q}}&min={{min}}&max={{max}}&category={{category}}">
                Next <i class="bi bi-chevron-right ms-2"></i>
              </a>
            </li>
          {{else}}
            <li class="page-item disabled">
              <span class="page-link">
                Next <i class="bi bi-chevron-right ms-2"></i>
              </span>
            </li>
          {{/if}}
        </ul>
        
        <div class="text-muted d-none d-md-block">
          {{totalPages}} pages total
        </div>
      </div>
    </nav>

  {{else}}
    {{!-- Empty State --}}
    <div class="card border-0 shadow-lg">
      <div class="card-body text-center py-5">
        <div class="mb-4">
          <i class="bi bi-search display-1 text-muted"></i>
        </div>
        <h4 class="fw-bold text-dark mb-3">No Products Found</h4>
        <p class="text-muted mb-4">
          {{#if (or q min max category)}}
            No products match your search criteria. Try adjusting your filters.
          {{else}}
            No products available at the moment. Check back soon!
          {{/if}}
        </p>
        <a href="/products" class="btn btn-dark btn-lg px-4">
          <i class="bi bi-arrow-clockwise me-2"></i>View All Products
        </a>
      </div>
    </div>
  {{/if}}
</div>

<style>
  .products-page {
    background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
    min-height: 100vh;
  }
  
  .page-header {
    border-bottom: 2px solid #eaeaea;
    padding-bottom: 1.5rem;
  }
  
  .product-card {
    border-radius: 12px;
    transition: all 0.3s ease;
    overflow: hidden;
  }
  
  .product-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 15px 35px rgba(0,0,0,0.1) !important;
  }
  
  .product-card:hover .product-actions {
    opacity: 1;
  }
  
  .product-image {
    position: relative;
  }
  
  .product-actions {
    transition: opacity 0.3s ease;
  }
  
  .stock-indicator {
    transition: all 0.3s ease;
  }
  
  .product-card:hover .stock-indicator {
    opacity: 0;
  }
  
  .page-link.btn-outline-dark {
    border: 1px solid #dee2e6;
    color: #495057;
    transition: all 0.3s ease;
  }
  
  .page-link.btn-outline-dark:hover {
    background-color: #212529;
    color: white;
    border-color: #212529;
  }
  
  .page-item.active .page-link {
    background-color: #212529;
    border-color: #212529;
    color: white;
  }
  
  .form-control:focus, .form-select:focus {
    border-color: #212529;
    box-shadow: 0 0 0 0.25rem rgba(33, 37, 41, 0.25);
  }
  
  .input-group-text {
    border-color: #212529;
  }
  
  .transition-all {
    transition: all 0.3s ease;
  }
  
  .rounded-top {
    border-top-left-radius: 12px !important;
    border-top-right-radius: 12px !important;
  }
  
  /* Responsive Design */
  @media (max-width: 768px) {
    .page-header h1 {
      font-size: 2rem;
    }
    
    .product-card {
      margin-bottom: 1rem;
    }
    
    .pagination {
      flex-wrap: wrap;
    }
    
    .page-link {
      padding: 0.5rem 0.75rem;
      font-size: 0.875rem;
    }
  }
</style>

{{!-- Helper for page numbers (you might need to implement this in your backend) --}}
{{#*inline "pageNumbers"}}
  {{#range 1 totalPages}}
    {{this}}
  {{/range}}
{{/inline}}