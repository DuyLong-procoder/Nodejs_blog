<div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-3">
  <h3 class="mb-0">Admin Products</h3>
  <a class="btn btn-dark" href="/admin/products/create">+ New</a>
</div>

<form class="row g-2 mb-3" method="get" action="/admin/products">
  <div class="col-12 col-md-3">
    <select class="form-select" name="sort">
      <option value="price_asc" {{#ifEquals sort "price_asc"}}selected{{/ifEquals}}>Price ↑</option>
      <option value="price_desc" {{#ifEquals sort "price_desc"}}selected{{/ifEquals}}>Price ↓</option>
      <option value="name_asc" {{#ifEquals sort "name_asc"}}selected{{/ifEquals}}>Name A→Z</option>
      <option value="name_desc" {{#ifEquals sort "name_desc"}}selected{{/ifEquals}}>Name Z→A</option>
    </select>
  </div>
  <div class="col-12 col-md-2 d-grid">
    <button class="btn btn-outline-dark">Sort</button>
  </div>
</form>

<div class="table-responsive">
  <table class="table table-hover align-middle">
    <thead>
      <tr>
        <th>Name</th>
        <th>Category</th>
        <th>Price</th>
        <th>Stock</th>
        <th style="width: 160px;"></th>
      </tr>
    </thead>
    <tbody>
      {{#each products}}
        <tr>
          <td class="fw-semibold">{{name}}</td>
          <td><span class="badge text-bg-secondary">{{category}}</span></td>
          <td>${{price}}</td>
          <td>{{stock}}</td>
          <td class="text-end">
            <a class="btn btn-sm btn-outline-dark" href="/admin/products/{{_id}}/edit">Edit</a>

            <form method="post" action="/admin/products/{{_id}}?_method=DELETE" class="d-inline">
              <button class="btn btn-sm btn-outline-danger" onclick="return confirm('Delete?')">Delete</button>
            </form>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
