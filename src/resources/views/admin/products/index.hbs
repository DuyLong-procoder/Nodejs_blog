<div class="d-flex justify-content-between align-items-center mb-3">
  <h3>Admin - Products</h3>
  <a class="btn btn-primary" href="/admin/products/create">+ Add</a>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th><th>Price</th><th>Stock</th><th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
      <tr>
        <td>{{name}}</td>
        <td>${{price}}</td>
        <td>{{stock}}</td>
        <td class="d-flex gap-2">
          <a class="btn btn-sm btn-warning" href="/admin/products/{{_id}}/edit">Edit</a>
          <form method="POST" action="/admin/products/{{_id}}?_method=DELETE">
            <button class="btn btn-sm btn-danger" type="submit">Delete</button>
          </form>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
